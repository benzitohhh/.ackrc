# set less-css type
--type-set=less=.less

# set json type
--type-set=json=.json

# ignore .css files (these are all generated by less-css)
--nocss

# ignore dirs (assumes searching from ~/LOreal/Prototypes/Platform/base)
--ignore-dir=delivery
--ignore-dir=css
--ignore-dir=publish
--ignore-dir=build
--ignore-dir=dist
--ignore-dir=consultation-server
--ignore-dir=font_awesome
--ignore-dir=static

# ignore files
--ignore-file=match:/yarn.lock/
